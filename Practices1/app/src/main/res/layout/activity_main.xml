<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.warmi.rodriguez.danny.practices1.MainActivity">


    <RelativeLayout
        android:layout_width="398dp"
        android:layout_height="505dp"
        tools:layout_editor_absoluteY="-2dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toast Button"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="280dp"
            android:layout_marginBottom="24dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="MI BOTON"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="205dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="55dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRIMER TEXTO"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="@android:dimen/thumbnail_width"
            android:layout_marginBottom="28dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_above="@+id/btn2"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
